@CHARSET "UTF-8";

/*@import url(https://fonts.googleapis.com/css?family=Lato:300);*/


.style_logo {     
	font-size: 40px;
	line-height: 50px;
	position: relative;
	top: -2px;
	left: 2px;
	padding-bottom: 20px;
	color: gray;
}

.style_logo_green {
	color: #418F69;
}

.register_head {
	background-color: #F1F1F1;
	border-bottom: 1px solid silver;
	position: fixed;
	width: 100%;
	height: 60px;
	border-bottom: 1px solid silver;
	z-index: 1000;
}

.register_head_logo {
	float: left;
	padding-left: 10px;
	padding-top: 5px;
}

.register_head_left {
	float: left;
	padding-left: 10px;
	padding-top: 10px;
}

.register_head_right {
	float: right;
	padding-right: 10px;
	padding-top: 10px;
	vertical-align: middle;
}

.powered {
	padding: 10px;
	font-size: 10px;
	color: gray;
	margin-top: 20px;
	text-align: center;
}

.title_subtext, .smart_h1 {
	font-family: 'Lato', sans-serif;
	font-size: 38px;
	color: #555555;
	padding: 20px;
}

.smart_h2 {
	font-family: 'Lato', sans-serif;
	font-size: 22px;
	color: #73737A;
}

#select_themes {
	border: 1px solid #dadada;
	border-radius: 1px;
	padding: 2px;
	font-family: verdana, arial;
	font-size: 10px;
}

input:focus, textarea:focus {
	outline: none;
	border-color: #9ecaed;
	box-shadow: 0 0 10px #9ecaed;
}