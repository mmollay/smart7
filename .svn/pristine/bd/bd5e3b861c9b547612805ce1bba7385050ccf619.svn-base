function start_trade(id) {
		$('#message').toast({
			class: 'info', title: 'Start Trade' + id, displayTime: 2000, position: 'top center'
		});
	
}

function stop_trade(id) {
		$('#message').toast({
			class: 'info', title: 'Stop Trade' + id, displayTime: 2000, position: 'top center'
		});
	
}

function stop_server(id) {
			$('#message').toast({
				class: 'red', title: 'Stop Server' + id, displayTime: 2000, position: 'top center'
			});
		
}	

function submit_hedging(id) {
		$('#message').toast({
			class: 'info', title: 'Send Hedging' + id, displayTime: 2000, position: 'top center'
		});
	
}
